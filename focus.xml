<theme>
    <formatVersion>4</formatVersion>
    <view name="system, basic, detailed, video">
        <image name="background" extra="true">
            <size>1 1</size>
            <pos>0 0</pos>
            <origin>0 0</origin>
            <path>./bg.png</path>
            <zIndex>0</zIndex>
            <color>30163C</color>
        </image>
    </view>
    <view name="basic, detailed, video">
        <image name="layout" extra="true">
            <path>./gamelist.png</path>
            <pos>0 0</pos>
            <zIndex>2</zIndex>
            <size>1 1</size>
            <origin>0 0</origin>
        </image>

        <datetime name="md_releasedate, md_lastplayed">
            <color>ffffff</color>
            <fontSize>0.02</fontSize>
            <fontPath>./noto.ttf</fontPath>
        </datetime>
        <text name="md_lbl_rating, md_lbl_releasedate, md_lbl_lastplayed, md_lbl_developer, md_lbl_publisher, md_lbl_genre">
            <color>b9b9b9</color>
            <fontSize>0.017</fontSize>
            <fontPath>./noto.ttf</fontPath>
        </text>
        <text name="md_developer, md_publisher, md_genre">
            <color>ffffff</color>
            <fontSize>0.02</fontSize>
            <fontPath>./noto.ttf</fontPath>
        </text>

        <text name="system_name" extra="true">
            <text>${system.fullName}</text>
            <forceUppercase>0</forceUppercase>
            <size>0.5 0.025</size>
            <pos>0.02 0.041</pos>
            <color>ffffff</color>
            <fontPath>./SST.ttf</fontPath>
            <fontSize>0.045</fontSize>
            <zIndex>2</zIndex>
        </text>
        <text name="md_lbl_rating">
            <pos>0.34 0.729</pos>
        </text>
        <rating name="md_rating">
            <pos>0.34 0.757</pos>
            <color>ffffff</color>
            <zIndex>2</zIndex>
            <size>0.0655 0.0205</size>
        </rating>
        <text name="md_lbl_releasedate">
            <pos>0.41 0.729</pos>
        </text>
        <datetime name="md_releasedate">
            <pos>0.41 0.757</pos>
            <size>0.07 0.02</size>
        </datetime>
        <text name="md_lbl_lastplayed">
            <pos>0.49 0.729</pos>
        </text>
        <datetime name="md_lastplayed">
            <pos>0.49 0.757</pos>
            <size>0.07 0.02</size>
        </datetime>
        <text name="md_lbl_developer">
            <pos>0.57 0.729</pos>
        </text>
        <text name="md_developer">
            <pos>0.57 0.757</pos>
            <size>0.12 0.02</size>
        </text>
        <text name="md_lbl_publisher">
            <pos>0.70 0.729</pos>
        </text>
        <text name="md_publisher">
            <pos>0.70 0.757</pos>
            <size>0.12 0.02</size>
        </text>
        <text name="md_lbl_genre">
            <pos>0.83 0.729</pos>
        </text>
        <text name="md_genre">
            <pos>0.83 0.757</pos>

            <size>0.148 0.02</size>
        </text>
        <textlist name="gamelist">
            <selectorColor>30163C</selectorColor>
            <selectedColor>ffffff</selectedColor>
            <primaryColor>efefef</primaryColor>
            <secondaryColor>ffffff</secondaryColor>
            <fontPath>./SST.ttf</fontPath>
            <fontSize>0.021</fontSize>
            <pos>0.011 0.112</pos>
            <size>0.3 0.829</size>
            <alignment>left</alignment>
            <horizontalMargin>0.01</horizontalMargin>
            <origin>0 0</origin>
            <lineSpacing>1.8</lineSpacing>
            <selectorImagePath>./box.png</selectorImagePath>
            <selectorOffsetY>-0.00135</selectorOffsetY>
            <selectorHeight>0.038</selectorHeight>
        </textlist>
        <image name="md_image">
            <origin>0.5 0.5</origin>
            <pos>0.659 0.363</pos>
            <maxSize>0.666 0.669</maxSize>
            <path>./no_boxart.png</path>
            <zIndex>1</zIndex>
        </image>
        <image name="no_boxart" extra="true">
            <origin>0.5 0.5</origin>
            <pos>0.659 0.363</pos>
            <maxSize>0.28 0.28</maxSize>
            <path>./no_boxart.png</path>
            <color>c1c1c1</color>
            <zIndex>0</zIndex>
        </image>
        <text name="md_description">
            <pos>0.34 0.807</pos>
            <size>0.628 0.123</size>
            <color>ffffff</color>
            <fontSize>0.023</fontSize>
            <fontPath>./noto.ttf</fontPath>
        </text>
        <image name="logo">
            <pos>0.9 0.1</pos>
            <origin>0.5 0.5</origin>
            <size>0.09 0.09</size>
            <color>00000000</color>
            <path>./box.png</path>
            <zIndex>0</zIndex>
        </image>
    </view>
    <view name="video">
        <video name="md_video">
            <origin>0.5 0.5</origin>
            <pos>0.659 0.363</pos>
            <maxSize>0.666 0.669</maxSize>
            <delay>2</delay>
            <default></default>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>false</showSnapshotDelay>
            <zIndex>2</zIndex>
        </video>
    </view>
    <feature supported="carousel">
        <view name="system">
            <carousel name="systemcarousel">
                <type>horizontal</type>
                <color>00000000</color>
                <logoScale>1</logoScale>
                <logoSize>0.25 0.155</logoSize>
            </carousel>
            <text name="systemInfo">
                <backgroundColor>00000000</backgroundColor>
                <color>ffffff</color>
                <fontPath>./SST.ttf</fontPath>
                <fontSize>0.024</fontSize>
            </text>
        </view>
    </feature>
</theme>
		
		
		